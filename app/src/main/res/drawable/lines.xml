<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape 1 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0077b6"></solid>
            <corners
                android:topRightRadius="80sp"
                android:bottomRightRadius="80sp" />

        </shape>
    </item>
    <!-- Shape 2 -->

    <item android:right="10dp" android:top="10dp" android:left="10dp" android:bottom="10dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#FFFF" /> <!-- Outline color -->

            <corners android:topRightRadius="80sp"
                android:bottomRightRadius="80sp" /> <!-- Optional: Corner radius -->
        </shape>
    </item>
</layer-list>
